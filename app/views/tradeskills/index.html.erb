<h1>Listing tradeskills</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Parent skill</th>
  </tr>

<% for tradeskill in @tradeskills %>
  <tr>
    <td><%=h tradeskill.name %></td>
    <td><%=h tradeskill.parent_skill_id %></td>
    <td><%= link_to 'Show', tradeskill %></td>
    <td><%= link_to 'Edit', edit_tradeskill_path(tradeskill) %></td>
    <td><%= link_to 'Destroy', tradeskill, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New tradeskill', new_tradeskill_path %>

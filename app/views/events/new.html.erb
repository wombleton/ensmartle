  <%= f.error_messages %>

  <p>
    <%= f.label :data %><br />
    <%= f.text_field :data %>
  </p>
  <p>
    <%= f.label :mission %><br />
    <%= f.text_field :mission %>
  </p>
  <p>
    <%= f.label :by %><br />
    <%= f.text_field :by %>
  </p>

<h1>Listing details</h1>

<table>
  <tr>
    <th>User name</th>
    <th>Comment</th>
    <th>Page</th>
    <th>Remote ip</th>
  </tr>

<% for detail in @details %>
  <tr>
    <td><%=h detail.user_name %></td>
    <td><%=h detail.comment %></td>
    <td><%=h detail.page_id %></td>
    <td><%=h detail.remote_ip %></td>
    <td><%= link_to 'Show', detail %></td>
    <td><%= link_to 'Edit', edit_detail_path(detail) %></td>
    <td><%= link_to 'Destroy', detail, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

